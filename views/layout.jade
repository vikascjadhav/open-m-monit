doctype html
html
  head
    title open-m-monit
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
      script(src='/javascripts/jquery-1.8.0.min.js')
      script(src='/javascripts/bootstrap.js')
      script(src='/socket.io/socket.io.js')
      -if (href === '') {
      script(src='/javascripts/main.js')
      - } else {
      script(src='/javascripts/serverInform.js')
      - }

      div#start
        div(style="position: relative; overflow: hidden;")
          div(style="position: relative; width: 30%; float: left;")
            img(src="/images/1.png")
          div(style="position: relative; width: 70%; float: left;")
            h3 Open Monit 
              sub Monitoring dashboard for monit instances
      div(id="optional",style="margin:10px 10px 0px 0px")    
      div#navBarContainer    
        div.navbar
          div.navbar-inner
            ul.nav
              each cluster in clusters
                li
                  a(href="/cluster/" + cluster)=cluster
              -if (href !== '') {
              li
                a &gt; #{href}
              - }
      div#contentDiv
       block content